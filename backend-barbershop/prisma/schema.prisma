generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  CLIENT
  WORKER
}

enum Status {
  PENDING
  CONFIRMED
  CANCELLED
}

model User {
  id               Int       @id @default(autoincrement())
  name             String
  email            String    @unique
  password         String
  phone            String?
  avatarUrl        String?
  bio              String?
  specialties      String? // Solo se usa para WORKERS
  isActive         Boolean   @default(true)
  role             Role      @default(CLIENT)
  bookings         Booking[] @relation("ClientBookings")
  workerBookings   Booking[] @relation("WorkerBookings")
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

model Service {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  price       Float
  bookings    Booking[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Booking {
  id        Int      @id @default(autoincrement())
  user      User     @relation("ClientBookings", fields: [userId], references: [id])
  userId    Int
  worker    User?    @relation("WorkerBookings", fields: [workerId], references: [id])
  workerId  Int?
  service   Service  @relation(fields: [serviceId], references: [id])
  serviceId Int
  date      DateTime
  time      String
  notes     String?
  status    Status   @default(PENDING)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
